<?xml version="1.0"?>
<launch>
  <!-- Map server -->
  <arg name="world_name" default="4room"/>
  <arg name="map_file" default="$(find eddiebot_navigation)/assets/$(arg world_name).yaml"/>
  <arg name="3d_sensor" default="kinect-v2"/>

  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!-- Localization -->
  <arg name="initial_pose_x" default="0.0"/>
  <arg name="initial_pose_y" default="0.0"/>
  <arg name="initial_pose_a" default="0.0"/>
  <arg name="custom_amcl_launch_file" default="$(find eddiebot_navigation)/launch/includes/$(arg 3d_sensor)_amcl.launch.xml"/>

  <include file="$(arg custom_amcl_launch_file)">
    <arg name="initial_pose_x" value="$(arg initial_pose_x)"/>
    <arg name="initial_pose_y" value="$(arg initial_pose_y)"/>
    <arg name="initial_pose_a" value="$(arg initial_pose_a)"/>
  </include>

  <!-- Move base -->
 <include file="$(find eddiebot_navigation)/launch/includes/move_base.launch.xml"/>
</launch>